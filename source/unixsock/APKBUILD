pkgname=unixsock
pkgver=2018.07
pkgrel=1
pkgdesc="UNIX Socket client/server"
url='http://www.0ink.net/'
arch="all"
license="MIT"
depends=""
depends_dev=""
makedepends="$depends_dev"
install=""
subpackages=""
source=""

check() {
 :
}

build() {
  cd "$srcdir"
  gcc $CFLAGS -o unixd ../unixd.c
  gcc $CFLAGS -o unixc ../unixc.c
}

package() {
  cd "$srcdir"
  mkdir -p "$pkgdir"/usr/bin
  install -m 755 unixd "$pkgdir"/usr/bin
  install -m 755 unixc "$pkgdir"/usr/bin
}
