# Contributor: Alejandro Liu <alejandro_liu@hotmail.com>
# Maintainer:
#
pkgname=undup
pkgver=2.2.0
pkgrel=0
pkgdesc="Hardlink based file de-duplication"
url="https://github.com/alejandroliu/$pkgname"

arch="all"
license="GPL"
depends=""
depends_dev="gdbm-dev"
makedepends="$depends_dev"
install=""
subpackages=""
source="https://github.com/TortugaLabs/$pkgname/releases/download/$pkgver/$pkgname-$pkgver.tar.gz"

builddir="$srcdir"/$pkgname-$pkgver
prepare() {
	cd "$builddir"
	ls -sh
}

check() {
  cd "$builddir"
  echo "Ignored..."
}

build() {
  cd "$builddir"
  make PEDANTIC=-std=gnu99 prod
}

package() {
  cd "$builddir"
  mkdir -p "$pkgdir"/usr/bin
  install -m 755 undup "$pkgdir"/usr/bin
}
sha512sums="e09e2588fd614e59bcc60ae3a346ccf8cf70b3bfcf9c083a9e97ad0572407d2391e5c697517381e3105d27519e5d8811f9ce8714669c4e4decdcc8b5d93b19f0  undup-2.2.0.tar.gz"
